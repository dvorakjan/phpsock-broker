{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": {
        "base": "$tslint5",
        "fileLocation": "relative"
      }
    },
    {
      "type": "npm",
      "script": "coverage",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "mongo",
      "problemMatcher": []
    }
  ]
}
